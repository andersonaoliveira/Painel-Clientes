<% if @client %>
  <div class="ls-box">
    <div class="ls-float-right ls-regroup">
      <a href="" class="ls-btn-primary" target="_blank">Acessar o Painel</a>
      <div data-ls-module="dropdown" class="ls-dropdown ls-pos-right">
      <a href="#" class="ls-btn"></a>
      <ul class="ls-dropdown-nav">
        <li>
          <a <%= link_to 'Editar conta', clients_changeaccount_path%></a>
        </li>
        <li>
          <a <%= link_to 'Desativar', clients_delete_path%></a>
        </li>
      </ul>
    </div>
  </div>
    <form action="" class="ls-form row" data-ls-module="form">
      <fieldset id="domain=form" class="ls-form-disable ls-form-text">
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Nome</b>
          <input type="text" value="<%= @client.name %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">CPF</b>
          <input type="text" value="<%= @client.eni %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Endereço</b>
          <input type="text" value="<%= @client.address %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Cidade</b>
          <input type="text" value="<%= @client.city %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Estado</b>
          <input type="text" value="<%= @client.state %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Telefone</b>
          <input type="text" value="<%= @client.phone %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Data de Nascimento</b>
          <input type="text" value="<%= @client.birth_date %>" required>
        </label>
        <label class="ls-label col-md-6 col-lg-8">
          <b class="ls-label-text">Razão Social</b>
          <input type="text" value="<%= @client.legal_name %>">
        </label>
      </fieldset>
    </form>
  </div>
<% else %>
  <%= link_to 'Criar conta', new_client_registration_path %>
<% end %>
</div>