<div class="container-fluid">
  <h1 class="ls-no-margin-left ls-no-margin-right ls-title-intro ls-ico-edit-admin">Pedidos</h1>
  <% unless @orders.nil? %>
    <div class="ls-box-filter">
      <%= form_with(url: orders_path, method: :get, html: {class:'ls-form ls-form-inline'}) do |f| %>
        <fieldset>
          <label class="ls-label col-md-4 col-xs-12">
            <%= f.label :search, 'Status', class:"ls-label-text"%>
            <div class="ls-custom-select">
              <%= f.select :status, options_for_select(@status), { name: 'status', class:'ls-select' } %>
            </div>
          </label>
          <label class="ls-label col-md-7 col-xs-12">
            <%= f.text_field :search, class:"ls-field", role:"search" %>
          </label>
          <label class="ls-label col-md-1 col-xs-12">
            <%= f.submit 'Filtrar', class:"ls-btn-primary"%>
          </label>
        </fieldset>
      <% end %>
    </div>
    <% if @orders.empty? %>
      <p class="required"><strong>Não há pedidos a serem exibidos</strong></p>
    <% else %>
      <%= render 'list_orders', orders: @orders %>
    <% end %>
  <% end %>
</div>